<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/busStopdWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:hint="@string/bus_stop"
        app:errorTextAppearance="@string/erro"
       >

        <EditText
            android:id="@+id/editTextBusStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>
        />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/busNumberWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@string/erro_inform_route"
        android:hint="@string/bus_numer"
        app:errorEnabled="true"
        >

        <EditText
            android:id="@+id/editTextBusNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>